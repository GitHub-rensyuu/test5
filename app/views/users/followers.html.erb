
  <div class="container">
    <div class="row">
      <table>
        <h1>Follower User</h1>
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th colspan="3"></th>
            <th colspan="3"></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @users.each do |user| %>
          <div class="one-post card w-100">

                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td>フォロー<%= user.following_user.count %></td>
                <td>フォロワー<%= user.follower_user.count %></td>
                <td><%= link_to "Show",user_path(user) %></td>

          </div>
          <% end %>
          </tr>
        </tbody>

      </table>
    </div>
    <%= paginate @users %>
  </div>