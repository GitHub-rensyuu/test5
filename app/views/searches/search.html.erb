<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
        <!--検索対象モデルがUserの時 -->
        <% if @model == "user" %>
        <h3>Users search for "<%= @content %>"</h3>
          <%= render 'users/search', users: @records %>

        <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
        <% else %>
        <h3>Books search for "<%= @content %>"</h3>
          <%= render 'books/search', books: @records %>
        <% end %>
    </div>
  </div>
</div>