<h2>Results index</h2>
<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @model == "user" %>
  <h1>user<h1>
    <%= render 'users/search', users: @records %>

  <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
  <% else %>
  <h1>book<h1>
    <%= render 'books/search', books: @records %>
  <% end %>
</table>